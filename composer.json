{
    "name": "bauhaus/application",
    "description": "PSR-15 middleware chain application",
    "type": "library",
    "license": "MIT",

    "keywords": [
        "bauhaus",
        "bauhaus application",
        "psr 15 middleware",
        "psr 15 application"
    ],

    "authors": [
        {
            "name": "Felipe Martins",
            "email": "me@fefas.net"
        }
    ],

    "scripts": {
        "test:cs": "phpcs --standard=tests/phpcs.xml --colors -ps",
        "test:unit": "phpunit -c tests/phpunit.xml --colors=always"
    },

    "autoload": {
        "psr-4": {
            "Bauhaus\\": "src"
        }
    },

    "require": {
        "http-interop/http-middleware": "^0.4.1",
        "psr/container": "^1.0"
    },

    "autoload-dev": {
        "psr-4": {
            "Bauhaus\\": "tests/unit"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
