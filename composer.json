{
    "name": "bauhaus/middleware-stack",
    "description": "PSR-15 middleware stack",
    "keywords": ["psr-15", "middleware", "stack", "chain"],

    "type": "library",
    "license": "MIT",

    "scripts": {
        "test:cs": "phpcs --colors -ps",
        "test:unit": "phpunit --colors=always --do-not-cache-result",
        "tests": ["@test:cs", "@test:unit"]
    },

    "autoload": {
        "psr-4": {
            "Bauhaus\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Bauhaus\\": "tests/"
        }
    },

    "require": {
        "php": "^8.0",
        "psr/container": "^1.0",
        "psr/http-server-middleware": "^1.0.1",
        "psr/http-server-handler": "^1.0.1"
    },

    "require-dev": {
        "bauhaus/test-kit": "dev-main"
    }
}
