{
    "name": "bauhaus/middleware-chain",
    "description": "Bauhaus' PSR-15 middleware chain",
    "type": "library",
    "license": "MIT",

    "keywords": [
        "bauhaus",
        "psr 15 middleware",
        "psr 15 middleware chain",
        "middleware chain",
        "middleware",
        "chain"
    ],

    "authors": [
        {
            "name": "Felipe Martins",
            "homepage": "https://fefas.net"
        }
    ],

    "scripts": {
        "test:cs": "phpcs --colors -ps",
        "test:unit": "phpunit --colors=always"
    },

    "autoload": {
        "psr-4": {
            "Bauhaus\\MiddlewareChain\\": "src"
        }
    },

    "require": {
        "http-interop/http-middleware": "^0.4.1",
        "psr/container": "^1.0"
    },

    "autoload-dev": {
        "psr-4": {
            "Bauhaus\\MiddlewareChain\\": "tests/unit"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
